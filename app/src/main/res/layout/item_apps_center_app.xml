<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/apps_center_item_margin"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/item_apps_center_app_image"
        android:layout_width="@dimen/apps_center_app_image_size"
        android:layout_height="@dimen/apps_center_app_image_size"
        android:layout_margin="@dimen/apps_center_item_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/temp_mz_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/apps_center_item_margin"
        android:layout_toRightOf="@id/item_apps_center_app_image"
        android:layout_toEndOf="@id/item_apps_center_app_image"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/item_apps_center_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_app_title"
            android:textSize="@dimen/apps_center_app_title_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_apps_center_app_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/apps_center_item_margin"
            android:layout_marginBottom="@dimen/apps_center_item_margin"
            android:text="@string/item_app_type" />
    </LinearLayout>

    <Button
        android:id="@+id/item_apps_center_app_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/button_choice_confirm" />
</RelativeLayout>