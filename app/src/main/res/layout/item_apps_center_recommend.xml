<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_apps_center_recommend_img1"
        android:layout_width="0dp"
        android:layout_height="@dimen/apps_center_app_recommend_height"
        android:layout_weight="1"
        android:layout_margin="@dimen/apps_center_item_margin"
        android:src="@drawable/temp_mz_logo_2"
        android:clickable="true" />
    <ImageView
        android:id="@+id/item_apps_center_recommend_img2"
        android:layout_width="0dp"
        android:layout_height="@dimen/apps_center_app_recommend_height"
        android:layout_weight="1"
        android:layout_margin="@dimen/apps_center_item_margin"
        android:src="@drawable/temp_mz_logo_2"
        android:clickable="true" />
</LinearLayout>